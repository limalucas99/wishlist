{
  "name": "wishlist-bff",
  "version": "1.0.0",
  "description": "BFF for the wishlist microservice",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --require tsconfig-paths/register src/main/server.ts",
    "test": "jest --passWithNoTests --verbose --noStackTrace --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.ts",
    "test:staged": "npm test -- --findRelatedTests",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.32.0",
    "eslint-config-love": "^121.0.0",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.1"
  }
}
